<div class="row">
  <h1>Players</h1>
</div>

<table id="players" class="w-100">
  <thead class="d-none">
    <tr>
      <td>Player</td>
      <td>Player</td>
      <td>Player</td>
    </tr>
  </thead>
  <tbody>
    <% @players.each_slice(3) do |player| %>
      <tr role="row">
        <% player.each do |p| %>
          <%= render partial: "players/player", locals: { p: p } %>
        <% end %>
        <% (3 - player.length).times do %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

